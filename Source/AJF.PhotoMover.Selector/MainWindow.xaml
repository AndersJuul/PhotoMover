<Window x:Class="AJF.PhotoMover.Selector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AJF.PhotoMover.Selector"
        mc:Ignorable="d"
        Title="{Binding CurrentFullPath}" Height="350" Width="525" WindowState="Maximized" KeyUp="MainWindow_OnKeyUp">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="{Binding Source}" />

    </Grid>
</Window>
